@model IEnumerable<AbsenceReportModel>
<table class="table" id="AbsenceReportTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeePosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAbsence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeAbsence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAbsence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeAbsence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
        </tr>
    }

</table>